<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:style/Theme.Material">
        <item name="android:colorPrimary">#212D3B</item>
        <item name="android:colorPrimaryDark">#1A242E</item>
        <item name="android:colorAccent">#7BC4FB</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>
    <style name="ButtonStyle" parent="android:style/Widget.Material.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:backgroundTint">@color/button_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>