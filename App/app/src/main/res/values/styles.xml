<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:style/Theme.Material">
        <item name="android:colorPrimary">#212D3B</item>
        <item name="android:colorPrimaryDark">#1A242E</item>
        <item name="android:colorAccent">#7BC4FB</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:seekBarStyle">@style/SeekBarStyle</item>
        <item name="android:switchStyle">@style/SwitchStyle</item>
    </style>
    <style name="ButtonStyle" parent="android:style/Widget.Material.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:backgroundTint">@color/button_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextViewStyle" parent="android:style/Widget.Material.TextView">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SeekBarStyle" parent="android:style/Widget.Material.SeekBar">
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:paddingStart">20dip</item>
        <item name="android:paddingEnd">20dip</item>
        <item name="android:max">1000</item>
        <item name="android:progress">500</item>
    </style>
    <style name="SwitchStyle" parent="android:style/Widget.Material.CompoundButton.Switch">
        <item name="android:scaleX">1.5</item>
        <item name="android:scaleY">1.5</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>