<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        tools:ignore="Autofill,LabelFor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dimmer_settings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="@string/number" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="12sp"
            android:text="@string/change_speed" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="12sp"
            android:text="@string/min_lightness" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="12sp"
            android:text="@string/max_lightness" />

    </LinearLayout>

    <include
        android:id="@+id/layoutDimSettings1"
        layout="@layout/device_settings_device_dimmer_settings" />
    <include
        android:id="@+id/layoutDimSettings2"
        layout="@layout/device_settings_device_dimmer_settings" />
    <include
        android:id="@+id/layoutDimSettings3"
        layout="@layout/device_settings_device_dimmer_settings" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/switchers_settings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="@string/number" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="@string/inverted" />

    </LinearLayout>

    <include
        android:id="@+id/layoutSwSettings1"
        layout="@layout/device_settings_device_switcher_settings" />
    <include
        android:id="@+id/layoutSwSettings2"
        layout="@layout/device_settings_device_switcher_settings" />
    <include
        android:id="@+id/layoutSwSettings3"
        layout="@layout/device_settings_device_switcher_settings" />
    <include
        android:id="@+id/layoutSwSettings4"
        layout="@layout/device_settings_device_switcher_settings" />

    <Button
        android:id="@+id/btnSaveDeviceSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save" />

</LinearLayout>